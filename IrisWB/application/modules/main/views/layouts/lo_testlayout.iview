<!doctype html>
<html>
    <head>
        {head()}
        {styleLoader("wb.css")}
    </head>
    <body {dojo_body()}{bodyOnload()}{wbColors($bodyColor)}>
        <div id="main">
            {ILO_adminToolBar()}
            <div id="container">
                    <div id='Title'>
                        <h1>{Title}</h1>
                    </div><!-- Title -->
                    <div class="column one">
                        <h2>Subcontrollers</h2>
                        {subView(1)}
                        {subView(2)}
                        {subView(3)}
                    </div><!-- 1 -->
                    <div class="column two">
                        {mainView()}
                    </div><!-- 2 -->
                    <div class="column three ">
                        <h2>Islets</h2>
                        {islet('islMain',array('Message from Layout'))}
                        {islet('islTestLayout',array(),'index','testLayout')}
                        {islet('islDemo',array(),'index','!workbench')}
                    </div><!-- 3 -->
            </div><!-- container -->
            <div id="foot">
                {wbFooter('modules/main/views/scripts/lo_testlayout.iview')}
            </div><!--foot-->
       </div><!--main-->     
    </body>
</html>