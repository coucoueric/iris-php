<!doctype html>
<html>
    <head>
        <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
        <link rel="stylesheet" type="text/css" href="/css/wb.css">
        {title()->render(TRUE)}
        {dojo_head()}
    </head>
    <body {dojo_body()}{bodyOnload()}{wbColors('ORANGE1')}>
        <div id="main">
            {ILO_adminToolBar()}
            <div id="container">
                    <div id='Title'>
                        <h1>{Title}</h1>
                    </div><!-- Title -->
                    <div class="column one">
                        <h2>Subcontrollers</h2>
                        {subView(1)}
                        {subView(2)}
                        {subView(3)}
                    </div><!-- 1 -->
                    <div class="column two">
                        {mainView()}
                    </div><!-- 2 -->
                    <div class="column three ">
                        <h2>Islets</h2>
                        {islet('islMain',array('Message from Layout'))}
                        {islet('islTestLayout',array(),'index','testLayout')}
                        {islet('islDemo',array(),'index','!workbench')}
                    </div><!-- 3 -->
            </div><!-- container -->
            <div id="foot">
                {wbFooter('modules/main/views/scripts/testlayout_wb.iview')}
            </div><!--foot-->
    </body>
</html>